<%- include("partials/landingsheader") %>
  <section class="container d-flex flex-wrap justify-content-center align-items-center min-vh-50 col-sm-12 gap-3">
    <section id="cards_animation_b">
      <h1 class="text-nowrap text-center ctext-white">MTG</h1>
      <article class="card card-flyer_b cbg-warning p-2">
        <img height="300rem" src="assets/images/landingspage/mtg.webp" class="rounded mb-2">
        <a href="/login" class="btn btn-dark cbg-dark">
          Aanmelden
        </a>
      </article>
    </section>
    <% const projectNames=["Fifa", "Fortnite" , "LegoMasters" , "LOTR" , "PokÃ©mon" ] %>
      <% for (const project of projectNames) { %>
        <section id="cards_animation_b">
          <h1 class="text-nowrap text-center ctext-white">
            <%= project %>
          </h1>
          <article class="card card-flyer_b cbg-warning p-2">
            <img height="300rem" src="assets/images/landingspage/<%= project.toLowerCase() %>.webp" class="rounded mb-2">
            <a href="#errorModal" class="btn btn-dark cbg-dark" data-bs-toggle="modal">
              Aanmelden
            </a>
          </article>
        </section>
        <% } %>
